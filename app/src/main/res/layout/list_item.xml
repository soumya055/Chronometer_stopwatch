<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/show_laps_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="3"
        android:orientation="horizontal"
        tools:ignore="ObsoleteLayoutParam,UselessParent">

        <TextView
            android:id="@+id/lap_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/show_real_time_laps"
            android:layout_weight="1"
            android:gravity="center"
            android:scrollbars="vertical"
            android:textSize="15sp"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/show_real_time_laps"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:scrollbars="vertical"
            android:textSize="15sp"
            tools:ignore="ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/show_current_time_laps"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/show_real_time_laps"
            android:layout_weight="1"
            android:gravity="center"
            android:scrollbars="vertical"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

</RelativeLayout>